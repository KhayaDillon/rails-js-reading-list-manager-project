<h1>Library</h1>

  <% @books.each do |book| %>
    <h4><%= book.title %></h4>
    By <%= book.author %>
    <br><br>
    <%= form_tag shelved_books_path do %>
      <%= collection_select(:shelved_book, :shelf_id, current_user.shelves, :id, :name) %>
      <%= hidden_field_tag "shelved_book[book_id]", book.id %>
      <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
      <%= submit_tag "Add Book" %>
    <% end %>
    <br><br>
  <% end %>
