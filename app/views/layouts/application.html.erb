<!DOCTYPE html>
<html>
  <head>
    <title>RailsReadingListManagerProject</title>
    <%= csrf_meta_tags %>
    
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js"></script>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav>
      <ul>
        <% if user_signed_in? %>
          Hello <%= current_user.name.capitalize %>, 
          <%= link_to "Home", root_path %>
          <%= link_to "Library", books_path %>
          <%= link_to "Your Shelves", user_shelves_path(current_user) %>
          <%= link_to "Profile", user_path(current_user) %>
          <%= link_to "Sign Out", destroy_user_session_path, method: 'delete' %>
        <% else %>
          <%= link_to "Home", root_path %>
          <%= link_to "Login", new_user_session_path %>
          <%= link_to "Sign Up", new_user_registration_path %>
        <% end %>
      </ul>
    </nav>
    <% if !flash.empty? %>
    <div class="flash">
      <h1>Notice!</h1>
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>
    </div>
    <% end %>

    <%= yield %>

    <script id="shelf-template" type="text/x-handlebars-template">
      <thead>
        <tr><td>#{{name}}</td><tr>
      </thead>
      <tbody>
        {{#each books}}
         <tr><td>#{{title}}</td></tr>
        {{/each}}
      </tbody>
    </script>
  </body>
</html>
